# PLC Coach API Service - Environment Variables Template
# Copy this file to .env and fill in your values

# Application Configuration
APP_NAME="PLC Coach API"
APP_VERSION=0.1.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
# For local development, set this to your local PostgreSQL connection
# For production, leave empty to use AWS Secrets Manager
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/plccoach
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_POOL_PRE_PING=true

# AWS Configuration (for production)
AWS_REGION=us-east-1
DB_SECRET_NAME=plccoach-db-password

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Clever OAuth Configuration
CLEVER_CLIENT_ID=your-clever-client-id-here
CLEVER_CLIENT_SECRET=your-clever-client-secret-here
CLEVER_REDIRECT_URI=http://localhost:8000/auth/clever/callback

# Session Configuration
SESSION_COOKIE_NAME=plc_session
SESSION_MAX_AGE=86400

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Testing
TEST_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/plccoach_test
